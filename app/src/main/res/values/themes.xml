<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Handicraft" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Handicraft" parent="Base.Theme.Handicraft" />
    <style name="AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabIndicatorColor">@color/text_primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabSelectedTextColor">@color/text_primary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:isIndicator">true</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMode">fixed</item>
    </style>
    <style name="titleTextStyle">
        <item name="android:fontFamily">@font/main_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/background_white</item>
    </style>
    <style name="CustomButton" parent="Widget.AppCompat.Button">>
        <item name="android:background">@drawable/rounded_but</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/main_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="CategoryImageStyle">
        <item name="android:background">@drawable/category_box</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="CategoryTextStyle">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="LabelsTextStyle">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipBackgroundColor">@color/filter_chip_bg</item>
        <item name="chipStrokeColor">#E9E9E9</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="chipCornerRadius">2dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>
    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="boxStrokeColor">@color/stroke_color</item>
        <item name="startIconTint">@color/stroke_color</item>
        <item name="endIconTint">@color/stroke_color</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="CustomAutoEditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="boxStrokeColor">@color/stroke_color</item>
        <item name="startIconTint">@color/stroke_color</item>
        <item name="endIconTint">@color/stroke_color</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>